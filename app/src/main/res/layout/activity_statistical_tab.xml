<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <LinearLayout
        android:id="@+id/base_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">
        <RelativeLayout
          android:background="@color/colorBackgroundItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:spinnerMode="dropdown"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/spinner1_relative_layout"
            android:background="@color/colorBackgroundItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <Spinner
              android:id="@+id/spinner1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:drawable/btn_dropdown"
              android:layout_alignParentStart="true"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
              android:spinnerMode="dropdown"/>
        </RelativeLayout>
        <LinearLayout
          android:id="@+id/dateId"
          android:background="@color/colorBackgroundItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2">
          <EditText
            android:id="@+id/text_from_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:focusable="false"
            android:hint="Từ ngày"/>
          <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/colorBackgroundItemDark"
            android:layout_gravity="center"/>
          <EditText
            android:id="@+id/text_to_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:focusable="false"
            android:hint="Đến ngày"/>
        </LinearLayout>
      </LinearLayout>
      <RelativeLayout
        android:id="@+id/layout_more_transaction_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">
        <RelativeLayout
          android:id="@+id/piechart_relative_layout"
          android:background="@color/colorBackgroundItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <RelativeLayout
          android:id="@+id/bar_chart_relative_layout"
          android:background="@color/colorBackgroundItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <RelativeLayout
          android:id="@+id/piechart_relative_layout_chi"
          android:background="@color/colorBackgroundItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <com.github.mikephil.charting.charts.PieChart
              android:id="@+id/chartChi1"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:layout_marginTop="10dp"
              android:layout_above="@+id/seekBar1" />
          <LinearLayout
              android:id="@+id/llla"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:layout_margin="8dp"
              android:layout_toLeftOf="@+id/tvYMax"
              android:layout_marginRight="5dp"
              android:max="200"
              android:paddingBottom="12dp"
              android:orientation="horizontal">
            <Button
                android:visibility="gone"
                android:text="Load"
                android:background="@drawable/selector_common_gray"
                android:id="@+id/btnanim"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
          </LinearLayout>
        </RelativeLayout>
      </RelativeLayout>
    </LinearLayout>
  </ScrollView>
</RelativeLayout>
