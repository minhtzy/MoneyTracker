<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event.EventDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:id="@+id/viewdetail_icon_with_title"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:minHeight="56dp">
                <com.zoostudio.moneylover.views.ImageViewGlide
                    android:id="@+id/icon" android:layout_width="@dimen/icon_size" android:layout_height="@dimen/icon_size" android:layout_marginLeft="@dimen/spacing_small_horizontal" android:layout_marginTop="@dimen/spacing_small" android:layout_marginStart="@dimen/spacing_small_horizontal"/>
                <org.zoostudio.p387fw.view.CustomFontTextView android:layout_gravity="center_vertical" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/spacing_large" android:layout_marginRight="@dimen/spacing_medium_horizontal" android:layout_marginStart="@dimen/spacing_large" android:layout_marginEnd="@dimen/spacing_medium_horizontal" style="@style/Lollipop.TextAppearance.Light.Headline"/>
            </LinearLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/viewdetail_date" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/icon_calendar" android:layout_width="@dimen/icon_size_small" android:layout_height="@dimen/icon_size_small" android:layout_marginLeft="@dimen/spacing_16_to_28" android:layout_marginTop="12dp" app:srcCompat="@drawable/ic_calendar"/>
                <org.zoostudio.p387fw.view.CustomFontTextView android:id="@+id/date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/spacing_xlarge" android:layout_marginTop="@dimen/spacing_medium" android:layout_marginRight="@dimen/spacing_medium_horizontal" android:layout_toRightOf="@+id/icon_calendar" style="@style/Lollipop.TextAppearance.Light.Body1"/>
                <org.zoostudio.p387fw.view.CustomFontTextView android:id="@+id/date_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:layout_below="@+id/date" android:layout_alignLeft="@+id/date" android:layout_alignRight="@+id/date" style="@style/Lollipop.TextAppearance.Light.Caption.Secondary"/>
            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/viewdetail_wallet" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp">
                <com.zoostudio.moneylover.views.ImageViewGlide android:id="@+id/wallet_icon" android:layout_width="@dimen/icon_size_small" android:layout_height="@dimen/icon_size_small" android:layout_marginLeft="@dimen/spacing_16_to_28" android:layout_marginTop="12dp" android:src="@drawable/ic_cashbook" android:layout_marginStart="@dimen/spacing_16_to_28"/>
                <org.zoostudio.p387fw.view.CustomFontTextView android:layout_gravity="center_vertical" android:id="@+id/wallet_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/spacing_xlarge" android:layout_marginRight="@dimen/spacing_medium_horizontal" android:layout_marginStart="@dimen/spacing_xlarge" android:layout_marginEnd="@dimen/spacing_medium_horizontal" style="@style/Lollipop.TextAppearance.Light.Body1"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/viewdetail_divider_with_padding" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@color/divider_light" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/spacing_small" android:layout_marginBottom="@dimen/spacing_small"/>
            </LinearLayout>

            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <org.zoostudio.p387fw.view.CapitalizeTextView android:id="@+id/btnFinish" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/spacing_medium_horizontal" android:text="@string/event_menu_mark_as_finished" style="@style/Button.Raised.Green"/>
                <org.zoostudio.p387fw.view.CapitalizeTextView android:id="@+id/btnViewTransaction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/spacing_medium_horizontal" android:text="@string/budget_detail_list_transactions_title" style="@style/Button.Raised.Green"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
