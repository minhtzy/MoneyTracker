<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistical.FragmentTendency">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingBottom="10dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp">
                    <RelativeLayout
                        android:id="@+id/layout_wallet"
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_transaction_wallet"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:src="@drawable/ic_account_balance_wallet_black_24dp" />

                        <TextView
                            android:id="@+id/text_transaction_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@id/image_transaction_wallet"
                            android:focusable="false"
                            android:textSize="24sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text0"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/g_400" />
                    <Spinner
                        android:id="@+id/spinnerItems"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        >

                    </Spinner>

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/g_400" />

                    <Spinner
                        android:id="@+id/spinnerSelect"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        >

                    </Spinner>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/g_400" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/layout_time_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_time_start"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="40dp" />

                            <ImageView
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/spacing_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/layout_time_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_time_end"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="40dp" />
                            <ImageView
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/spacing_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view1"
                android:layout_marginTop="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">

                <FrameLayout
                    android:id="@+id/frame_layout_tendency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>