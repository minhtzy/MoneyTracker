<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistical.OVTransactionMonth">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Khoản thu"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <com.minhtzy.moneytracker.view.CurrencyTextView
                        android:id="@+id/txtIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Khoản chi"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <com.minhtzy.moneytracker.view.CurrencyTextView
                        android:id="@+id/txtExpenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view1"
                android:layout_marginTop="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Thu nhập ròng"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <com.minhtzy.moneytracker.view.CurrencyTextView
                        android:id="@+id/txtIncomeNet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view2"
                android:layout_marginTop="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Khoản chi"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/text4"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/g_400" />


                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="KHOẢN CHI LỚN NHẤT"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:id="@+id/layout_ov1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text6"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp">

                        <include layout="@layout/snippet_transaction_item2" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/layout_ov1"
                        android:background="@color/g_400" />


                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text7"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="KHOẢN CHI THEO NHÓM"
                        android:textSize="15dp" />


                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechartExpenses"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@+id/text8"
                        />

                    <TextView
                        android:id="@+id/text14"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/piechartExpenses"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/g_400" />


                    <TextView
                        android:id="@+id/text15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text14"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="KHOẢN CHI NHỎ NHẤT"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:id="@+id/layout_ov3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text15"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp">

                        <include layout="@layout/snippet_transaction_item3" />

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view3"
                android:layout_marginTop="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/text9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Khoản thu"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/text9"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/g_400" />


                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text10"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="KHOẢN THU LỚN NHẤT"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:id="@+id/layout_ov2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text11"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp">

                        <include layout="@layout/snippet_transaction_item4" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text12"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/layout_ov2"
                        android:background="@color/g_400" />


                    <TextView
                        android:id="@+id/text13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text12"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="KHOẢN THU THEO NHÓM"
                        android:textSize="15dp" />


                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechartIncome"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@+id/text13"
                        />



                    <TextView
                        android:id="@+id/text16"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/piechartIncome"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/g_400" />


                    <TextView
                        android:id="@+id/text17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text16"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="KHOẢN THU NHỎ NHẤT"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:id="@+id/layout_ov4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text17"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp">

                        <include layout="@layout/snippet_transaction_item5" />

                    </RelativeLayout>

                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>