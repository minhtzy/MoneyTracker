<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_money_type"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_attach_money_black_24dp"/>

    <EditText
        android:id="@+id/text_transaction_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/image_money_type"
        android:layout_marginTop="8dp"
        android:hint="0" />

    <ImageView
        android:id="@+id/image_transaction_category"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/image_money_type"
        android:layout_margin="8dp"
        android:src="@drawable/ic_help_black_24dp"/>

    <EditText
        android:id="@+id/text_transaction_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_transaction_category"
        android:layout_below="@id/text_transaction_money"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Choose your category"/>
    <ImageView
        android:id="@+id/image_transaction_note"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/image_transaction_category"
        android:layout_margin="8dp"
        android:src="@drawable/ic_event_note_black_24dp"/>

    <EditText
        android:id="@+id/text_transaction_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_transaction_note"
        android:layout_below="@id/text_transaction_category"
        android:layout_marginTop="8dp"
        android:hint="Write note"/>
    <ImageView
        android:id="@+id/image_transaction_date"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/image_transaction_note"
        android:layout_margin="8dp"
        android:src="@drawable/ic_event_black_24dp"/>

    <EditText
        android:id="@+id/text_transaction_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_transaction_date"
        android:layout_below="@id/text_transaction_note"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:text="Today"/>

    <ImageView
        android:id="@+id/image_transaction_wallet"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/image_transaction_date"
        android:layout_margin="8dp"
        android:src="@drawable/ic_account_balance_wallet_black_24dp"/>

    <EditText
        android:id="@+id/text_transaction_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_transaction_wallet"
        android:layout_below="@id/text_transaction_date"
        android:focusable="false"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_transaction_wallet"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="Thêm" />

    <Button
        android:id="@+id/buttonCancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_transaction_wallet"
        android:layout_toEndOf="@id/buttonSave"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="Hủy" />
</RelativeLayout>