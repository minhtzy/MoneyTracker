<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_money_type"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_help_white_36dp"/>

    <EditText
        android:id="@+id/text_transaction_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/image_money_type"
        android:layout_marginTop="8dp"
        android:text="0" />

    <ImageView
        android:id="@+id/image_transaction_category"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/image_money_type"
        android:layout_margin="8dp"
        android:src="@drawable/ic_help_white_36dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_transaction_category"
        android:layout_below="@id/text_transaction_money"
        android:layout_marginTop="8dp"
        android:hint="Choose your category"/>

</RelativeLayout>